---
import { ViewTransitions } from "astro:transitions";
import { Header } from "@components/header";
import Footer from "@components/Footer.astro";

interface Props {
  title?: string;
}

const { title = "Faraaz Biyabani" } = Astro.props;
const isProduction = import.meta.env.PROD;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="root">
      <Header client:only="preact" transition:persist />
      <div class="layout">
        <main class="content" transition:animate="fade">
          <slot />
        </main>
      </div>
      <Footer />
    </div>
    <!-- <Footer /> -->
    <style lang="scss" is:global>
      @use "@styles/theme";
      @use "@styles/base";
      @use "@styles/include-media" as query;

      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      .root {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .layout {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        // added for margins on larger displays
        //align-items: center;
        height: 100%;
      }

      header {
        width: 100%;
      }

      .content {
        // align-self: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        // align-items: center;
        margin: 0 12%;
        @include query.media("<tablet") {
          margin: 0 8%;
        }
        @include query.media(">=1440px") {
          margin: 0 18%;
        }
        @include query.media(">1920px") {
          max-width: 1440px;
        }
      }

      footer {
        position: sticky;
        top: 100vh;
        min-height: 10%;
        width: 100%;
        flex-shrink: 0;
      }
    </style>
    <script>
      import { theme } from "src/store/theme";

      const setTheme = () =>
        theme.subscribe((value: string) => {
          document.documentElement.className = value;
        });

      setTheme();

      document.addEventListener("astro:after-swap", setTheme);
    </script>
    {
      isProduction ? (
        <>
          <script
            async
            defer
            src="https://simple.faraazbiyabani.me/latest.js"
          />
          <noscript>
            <img
              src="https://simple.faraazbiyabani.me/noscript.gif"
              alt=""
              referrerpolicy="no-referrer-when-downgrade"
            />
          </noscript>
        </>
      ) : null
    }
  </body>
</html>
