---
import Layout from "@layouts/Layout.astro";

const embedUrl = import.meta.env.PUBLIC_RESUME_EMBED_URL;
---

<Layout title="Resume - Faraaz Biyabani">
  <div class="resume-container">
    <div class="resume">
      <iframe
        id="resume-iframe"
        title="Resume"
        src={embedUrl}
        allow="autoplay"
        loading="lazy"></iframe>
    </div>
  </div>
</Layout>

<style lang="scss">
  @use "@styles/include-media" as query;

  .resume-container {
    margin: var(--section-margin-top) 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .resume {
    height: calc(100vh - 80px);
    @include query.media("<=tablet") {
      height: 450px;
    }
    @include query.media(">=tablet") {
      min-height: 1150px;
      min-width: 800px;
      max-width: 900px;
    }
    @include query.media(">=1440px") {
      width: 80%;
      max-width: 1280px;
    }

    width: 100%;
    display: flex;
    justify-content: center;
  }

  #resume-iframe {
    height: 100%;
    width: 100%;

    border: 1px solid var(--border-primary);
    border-radius: 10px;
    box-shadow: 10px 10px 0 var(--blue-10);
  }
</style>
